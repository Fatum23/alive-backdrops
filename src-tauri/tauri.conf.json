{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Alive Backdrops",
    "version": "0.0.0"
  },
  "tauri": {
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost"
    },
    "allowlist": {
      "path": {
        "all": true
      },
      "fs": {
        "all": true,
        "scope": [
          "**"
        ]
      },
      "protocol": {
        "asset": true,
        "assetScope": ["**"]
      },
      "all": true,
      "notification": {
        "all": true
      },
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": true,
        "create": true,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true
      }
    },
    "windows": [
      {
        "label": "main",
        "title": "Alive Backdrops",
        "url": "frontend/main/html/main.html",
        "width": 800,
        "height": 700,
        "decorations": false,
        "center": true,
        "fileDropEnabled": true
      },
      {
        "label": "wallpaper",
        "fullscreen": true,
        "url": "frontend/wallpaper/html/wallpaper.html"
      }
    ],
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.fatum23.alive-backdrops",
      "icon": [
        "icons/icon.ico"
      ],
      "shortDescription": "Alive Backdrops",
      "longDescription": "Application for setting live wallpapers"
    },
    "systemTray": {
      "iconPath": "icons/icon.ico",
      "iconAsTemplate": true
    }
  }
}
